# RFQ Django configuration
DJANGO_DEBUG=0
DJANGO_SECRET_KEY=change-me-to-a-long-random-secret
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost
DJANGO_CSRF_TRUSTED_ORIGINS=https://your-domain.com

# Database: Supabase PostgreSQL (or any PostgreSQL)
# Get from: Supabase Dashboard -> Settings -> Database -> Connection string (URI)
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOURREF.supabase.co:5432/postgres

# Enable if running behind HTTPS reverse proxy
DJANGO_SECURE_SSL_REDIRECT=1
DJANGO_SECURE_HSTS_SECONDS=31536000
